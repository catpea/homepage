<div class="container">
  <div class="row mb-2">
    {{#each books as |book|}}
    <div class="col">
      <div class="card mb-3 text-white bg-dark">
        <div class="row no-gutters">
          <div class="col-md-4">
            <img src="{{book.cover}}" class="card-img" alt="{{book.title}}: {{book.description}}">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">{{book.title}}</h5>
              <p class="card-text">{{book.description}}</p>
              <p class="card-text"><small class="text-muted">by {{book.author}}</small></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
